<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".akhir5">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tl2"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/balek"
            android:onClick="af" />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:background="@drawable/logo" />


    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/li"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tl2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="DATA"
        android:textColor="@color/coklat"
        android:textSize="18dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/lp"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_below="@+id/li"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttonn">

        <TextView
            android:id="@+id/mtrr"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="328dp"
            android:text="NAMA :"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/v60" />

    <TextView
        android:id="@+id/mtrrr"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="40dp"
        android:layout_marginTop="190dp"
        android:text="DESKRIPSI :"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/motRRR"
        android:layout_width="180dp"
        android:layout_height="1500dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="170dp"
        android:layout_marginTop="195dp"
        android:textSize="11dp"
        android:text="Hario V60 diciptakan oleh perusahaan Tokyo yang memproduksi dan menjual produk-produk kaca yang menggunakan bahan kimia dan fisik. Alat seduh Ini adalah pendatang baru untuk industri perangkat pembuatan manual brew. Dan baru ditemukan pada tahun 2015. Penamaan V60 di ilhami dari sudut kerucutnya 60 derajat." />

    <TextView
        android:id="@+id/motor"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="130dp"
        android:layout_marginTop="350dp"
        android:text="Rp.20.000 - Rp.25.000" />


    <TextView
        android:id="@+id/hgr"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="40dp"
        android:layout_marginTop="345dp"
        android:text="HARGA :"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/harga"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="130dp"
        android:layout_marginTop="385dp"
        android:text="V60" />


    <Button
        android:id="@+id/simpan"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttonn"
        android:text="PESAN"
        android:textColor="@color/white"
        android:textSize="14dp" />


</RelativeLayout>