<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".akhir6">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tl2"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/balek"
            android:onClick="ag" />


        <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:background="@drawable/logo" />


    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/li"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tl2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="DATA"
        android:textColor="@color/coklat"
        android:textSize="18dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/lp"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:layout_below="@+id/li"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttonn">

        <TextView
            android:id="@+id/mtrr"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="328dp"
            android:text="NAMA  :"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/latte" />

    <TextView
        android:id="@+id/mtrrr"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="40dp"
        android:layout_marginTop="190dp"
        android:text="DESKRIPSI :"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/motRRR"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="170dp"
        android:layout_marginTop="195dp"
        android:textSize="13dp"
        android:text="Latte art pertama kali diciptakan oleh David Schomer. Dia merupakan pemilik kedai kopi Espresso Vivace yang berasal dari Amerika Serikat. Selain itu dia juga tergila-gila dalam menciptakan seni di atas kopi pada pertengahan 1980-an." />

    <TextView
        android:id="@+id/motor"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="130dp"
        android:layout_marginTop="350dp"
        android:text="Rp.18.000" />


    <TextView
        android:id="@+id/hgr"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="40dp"
        android:layout_marginTop="345dp"
        android:text="HARGA :"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/harga"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/li"
        android:layout_marginStart="130dp"
        android:layout_marginTop="385dp"
        android:text="Latte" />


    <Button
        android:id="@+id/simpan"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttonn"
        android:text="PESAN"
        android:textColor="@color/white"
        android:textSize="14dp" />


</RelativeLayout>